<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RootActivity" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="Theme.SubActivity" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back_white_24dp</item>
    </style>

</resources>

