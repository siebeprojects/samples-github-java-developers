<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SampleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SampleText.XXSmall">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SampleText.XSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SampleText.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SampleText.Small.Gray">
        <item name="android:textColor">@color/medium</item>
    </style>

    <style name="SampleText.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleText.Small.Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="SampleText.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SampleText.Medium.Gray">
        <item name="android:textColor">@color/font_medium</item>
    </style>

    <style name="SampleText.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleText.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SampleText.Large.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleText.XLarge">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SampleText.XLarge.Gray">
        <item name="android:textColor">@color/font_medium</item>
    </style>

    <style name="SampleText.XLarge.Gray.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SampleText.Medium.Gray.Info">
        <item name="android:layout_marginLeft">@dimen/border_xxlarge</item>
        <item name="android:layout_marginRight">@dimen/border_xxlarge</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SampleProgressbar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SampleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/light</item>
    </style>

</resources>

